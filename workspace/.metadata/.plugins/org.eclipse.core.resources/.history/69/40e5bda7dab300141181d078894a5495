import java.io.BufferedWriter;
import java.io.FileWriter;
import java.io.IOException;

public class Sequencer {

	String sequence1;
	String sequence2;
	MyFileReader fr = new MyFileReader();
	MyFileReader fr2 = new MyFileReader();
	MyAligner ma = new MyAligner();

	public Sequencer() {

		fr.openFile("C:\\Users\\Andy\\Desktop\\EbolaStrands\\test1.txt");
		sequence1 = fr.readFullFile();

		fr2.openFile("C:\\Users\\Andy\\Desktop\\EbolaStrands\\test2.txt");
		sequence2 = fr2.readFullFile();

		String[] aligned = ma.align(sequence1, sequence2);

		// System.out.println(aligned[0]);
		// System.out.println(aligned[1]);

		int i = 0;
		try {
			BufferedWriter writer = new BufferedWriter(new FileWriter("comparrison.txt"));
			
			for (int x = 0; x < aligned[0].length() || x < aligned[1].length(); x++) {
				
				do{
					//writer.write(aligned[0]);
					System.out.print(aligned[0].charAt(x));
					x++;
				}while((x % 60) !=0 || x  );
				
				//writer.newLine();
				System.out.println();
				
				x -= 60;
				
				do{
					//writer.write(aligned[1]);
					System.out.print(aligned[1].charAt(x));
					x++;
				}while((x % 60) !=0);
				
			//	writer.newLine();
				System.out.println();
			}

			writer.close();
		} catch (IOException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}

	}

}
